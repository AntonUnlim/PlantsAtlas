<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PlantNotFullListActivity"
    android:background="@color/background">

    <TextView
        style="@style/TextViewTitleStyle"
        android:id="@+id/plantNotFullListTitle"/>
    <ImageView
        android:id="@+id/plantNotFullListImage"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <EditText
        style="@style/EditTextSearchStyle"
        android:id="@+id/plantNotFullListSearchText"/>

    <ListView
        android:id="@+id/plantNotFullListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>