<resources>

    <style name="TextViewTitleStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="EditTextSearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:hint">Поиск...</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/mainTextColor</item>
    </style>

    <style name="tableColumnTitleWithBorders">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/cell_shape</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="tableColumnValueWithBorders">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:background">@drawable/cell_shape</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="tableColumnValueWithoutBorders">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/mainTextColor</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/mainTextColor</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="normalText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="listItemTextOnly">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
</resources>
